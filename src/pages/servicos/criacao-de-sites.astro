---
import PageLayout from '@/layouts/PageLayout.astro';
import { Button } from '@/components/ui/button';
import { ArrowRight } from 'lucide-react';
import { Check } from 'lucide-react';

const service = {
  title: "Criação de Sites Profissionais",
  subtitle: "A Casa Própria da Sua Empresa na Internet",
  description: "Construímos sites de alta performance, focados em conversão e otimizados para o Google. Um endereço digital onde você tem controle total, construindo um ativo que trabalha para você 24 horas por dia.",
  imageUrl: "https://images.unsplash.com/photo-1593720213428-28a5b9e94613?q=80&w=1740&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  features: [
    "Design Exclusivo e Alinhado à sua Marca",
    "Otimização para SEO desde a fundação",
    "Performance e Velocidade de Carregamento",
    "100% Responsivo para Celulares e Tablets",
    "Integração com Ferramentas de Marketing",
    "Painel de Gerenciamento Intuitivo (Opcional)"
  ],
  cta: "Quero um Site Profissional"
}
---

<PageLayout 
  title={`Agência 100:1 | ${service.title}`}
  description={service.description}
>
  {/* Seção Hero do Serviço */}
  <section class="py-20 bg-secondary bg-opacity-20">
    <div class="container mx-auto px-4 grid lg:grid-cols-2 gap-12 items-center">
      <div class="order-2 lg:order-1">
        <h1 class="text-4xl md:text-5xl font-montserrat font-bold text-title mb-4">{service.title}</h1>
        <h2 class="text-2xl md:text-3xl font-montserrat font-semibold text-accent mb-6">{service.subtitle}</h2>
        <p class="text-lg text-foreground text-opacity-80 mb-8 font-work-sans">{service.description}</p>
        <a href="#contato">
          <Button size="lg" className="bg-accent hover:bg-accent/90 text-accent-foreground font-semibold px-8 py-7 text-lg hover-glow">
            {service.cta}
            <ArrowRight className="ml-2 w-5 h-5" />
          </Button>
        </a>
      </div>
      <div class="order-1 lg:order-2">
        <img src={service.imageUrl} alt={service.title} class="rounded-2xl shadow-xl w-full h-auto object-cover aspect-[16/10]" loading="lazy" />
      </div>
    </div>
  </section>

  {/* Seção de Features */}
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-montserrat font-bold text-title mb-4">Funcionalidades e Vantagens</h2>
        <p class="text-lg text-foreground text-opacity-80 font-work-sans">
            Um site profissional é mais do que um cartão de visitas. É a sua principal ferramenta de vendas e marketing, construída sobre pilares sólidos.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {service.features.map(feature => (
          <div class="bg-secondary bg-opacity-20 p-6 rounded-lg flex items-start space-x-4">
            <div class="bg-primary text-primary-foreground p-2 rounded-full">
              <Check className="w-5 h-5" />
            </div>
            <p class="font-work-sans text-foreground text-opacity-90">{feature}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

</PageLayout>
